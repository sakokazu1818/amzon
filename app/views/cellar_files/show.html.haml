- model_class = CellarFile
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @cellar_file.name


= link_to t('.back', :default => t("helpers.links.back")), cellar_files_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_cellar_file_path(@cellar_file), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), cellar_file_path(@cellar_file), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
