= form_for @cellar_file, html: { class: "form form-horizontal cellar_file" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.label :excel
      = f.file_field :excel, class: 'file-inputs'
      = f.hidden_field :shampoo_id, value: @cellar_file.name
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), cellar_files_path, :class => 'btn btn-default'